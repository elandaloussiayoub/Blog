<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/dash/head') %> 
  <title>Borwse Articles</title>
  <style>
    .arti {
      list-style-type: none;
      margin : 5px 5px 5px 5px;
      padding: 5px 5px 25px 15%;
      border-bottom : solid lightgray 2px; 
      width: 70%;
    }
    h2 {
      margin-left: 17%;
    }
  </style>
</head>

<body>

    <div class="wrapper">
      <%- include('../../partials/dash/sidebar') %>
      <!-- Page Content  -->
      <div id="content">
        <%- include('../../partials/dash/topbar') %>
            
        <div id="mainContainer">
          <h2>Browse Articles</h2>
          <br><br>
          <ul>
            <% var count = 0 ;%>
            <% for( let article of articles) { %> 
              <li class="arti">
                <h2><%= article.title %></h2>
                <div>
                  <h4>By : <%= userr[count%userr.length].username%></h4>
                  <% count += 1 %>
                </div>
                <p><%= article.body %></p>
                <p><%= article.date %></p>
                <p><strong><%= article.tags %></strong></p>
                
                <div class="viewcomments">
                  <form action="/comment/article/<%= article._id %>" method="GET">
                  <input type="submit" value="View Comments" class="btn btn-success" id="">
                  </form>
                </div>
                <div class="writecomment" style="margin-top: 5;">
                  <form action="/comment/article/<%= article._id %>/new" method="GET">
                    <input type="submit" value="Write Comments" class="btn btn-success" id="">
                  </form>
                </div>
              </li>  
            <% } %> 
          </ul>
        </div>

      </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>