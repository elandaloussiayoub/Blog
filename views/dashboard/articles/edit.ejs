<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/dash/head') %> 
  <title>Edit Article</title>
</head>

<body>

    <div class="wrapper">
      <%- include('../../partials/dash/sidebar') %>
      <!-- Page Content  -->
      <div id="content">
        <%- include('../../partials/dash/topbar') %>
            
        <div id="mainContainer">
          <div id="writearticle">

            <h1>Edit Your article !</h1>
            <form action="/article/<%=article._id%>/edit?_methode=PUT" method="POST">
              <section>
                <label for="title">Enter a Title : </label><br>
                <input type="text" id="title" placeholder="Title" value="<%= article.title %>" name="title" required>
              </section>
              <section>
                <label for="body">Fill the article : </label> <br>
                <textarea name="body" id="body" cols="60" rows="30" required><%= article.body %></textarea>
              </section>
              <section>
                <label for="tags">Enter the tags for the article :</label><br>
                <input type="text" id="tags" placeholder="Enter tags seperated by space" value="<%= article.tags %>" name="tags" required>
              </section>
              <button class="btn btn-primary">Send</button>
            </form>  

          </div>
        </div>

      </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>