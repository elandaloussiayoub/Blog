<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/dash/head') %> 
  <title>Write New Article</title>
</head>

<body>

    <div class="wrapper">
      <%- include('../../partials/dash/sidebar') %>
      <!-- Page Content  -->
      <div id="content">
        <%- include('../../partials/dash/topbar') %>
            
        <div id="mainContainer">
          <div id="writearticle">

            <h1>Make a new article !</h1>
            <form action="/article/new" method="POST">
              <section>
                <label for="title">Enter a Title : </label><br>
                <input type="text" id="title" placeholder="Title" name="title" required>
              </section>
                <!-- <input type="image"  name="image"> -->
              <section>
                <label for="body">Fill the article : </label> <br>
                <textarea name="body" id="body" cols="60" rows="30" required></textarea>
              </section>
              <section>
                <label for="tags">Enter the tags for the article :</label><br>
                <input type="text" id="tags" placeholder="Entre tags seperated by space" name="tags" required>
              </section>
              <button>Publish</button>
            </form>  

          </div>
        </div>

      </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>