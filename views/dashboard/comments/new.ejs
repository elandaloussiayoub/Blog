<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/dash/head') %> 
  <title>Write New Comment</title>
</head>

<body>

    <div class="wrapper">
      <%- include('../../partials/dash/sidebar') %>
      <!-- Page Content  -->
      <div id="content">
        <%- include('../../partials/dash/topbar') %>
            
        <div id="mainContainer">
          <div id="writearticle">

            <h1>Share Your Comment !!</h1>
            <form action="/comment/article/<%= article %>/new" method="POST">
              <section>
                <label for="body">Fill the article : </label> <br>
                <textarea name="body" id="body" cols="30" rows="5" required></textarea>
              </section>
              <button>Post</button>
            </form>  

          </div>
        </div>

      </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>