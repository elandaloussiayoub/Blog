<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/dash/head') %> 
  <title>Comment</title>
</head>

<body>

    <div class="wrapper">
      <%- include('../../partials/dash/sidebar') %>
      <!-- Page Content  -->
      <div id="content">
        <%- include('../../partials/dash/topbar') %>
            
        <div id="mainContainer">
          <h3>Commented on article : <%= article.title %></h3>
          <h4>By : <%= author.firstname %> <%= author.lastname %></h4>
          <p><%= comment.body %></p>
          <p><%= comment.date %></p>
        </div>

      </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>